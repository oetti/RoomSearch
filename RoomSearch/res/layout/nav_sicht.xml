<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_stplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:text="@string/stundenplan"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00979a"
                    android:gravity="center"
                    android:text="@string/mon"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <Spinner
                    android:id="@+id/spinner_mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9dd7d8"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/checkBox_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/aktiv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >



                <TextView
                    android:id="@+id/textView_die"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00979a"
                    android:gravity="center"
                    android:text="@string/die"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <Spinner
                    android:id="@+id/spin_die"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9dd7d8"
                    android:textSize="6sp" />

                <CheckBox
                    android:id="@+id/checkBox_die"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/aktiv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >



                <TextView
                    android:id="@+id/textView_mit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00979a"
                    android:gravity="center"
                    android:text="@string/mit"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <Spinner
                    android:id="@+id/spin_mit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9dd7d8"
                    android:textSize="6sp" />

                <CheckBox
                    android:id="@+id/checkBox_mit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/aktiv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >



                <TextView
                    android:id="@+id/textView_don"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00979a"
                    android:gravity="center"
                    android:text="@string/don"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <Spinner
                    android:id="@+id/spinner_don"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9dd7d8"
                    android:textSize="6sp" />

                <CheckBox
                    android:id="@+id/checkBox_don"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/aktiv" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:orientation="vertical" >



                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00979a"
                    android:gravity="center"
                    android:text="@string/fre"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff" />

                <Spinner
                    android:id="@+id/spinner_fre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9dd7d8"
                    android:textSize="6sp" />


                <CheckBox
                    android:id="@+id/checkBox_fre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:text="@string/aktiv" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>


    <TextView
        android:id="@+id/textView_standort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:text="@string/standort"
        android:textAppearance="?android:attr/textAppearanceLarge" />






    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.63"
        android:gravity="center"
        android:orientation="vertical" >





        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80" >





            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:gravity="center"
                android:text="@string/test"
                android:background="#F2F2F2" />

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_finden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:text="@string/finden" />

</LinearLayout>